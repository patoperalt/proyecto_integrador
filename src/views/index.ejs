<%- include('partials/header')%>
 
<section class="hero"><!-- inicio hero-->

    <article class="hero__content container">

        <h3 class="hero__title">Nuevos Ingresos</h3>
        <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
        <a class="hero__link" href="/shop">SHOP</a>

    </article>

</section><!-- fin hero-->

  <main class="container">
   
    <% data.forEach( item => { %>
    <section class="collection container">
       <article class="collection__content">
            <h3 class="collection__title"><%= item.licence_name %></h3>
            <p class="collection__text"><%= item.licence_description %></p>
            <a class="collection__link" href="/shop">VER COLECCIÓN</a>
        </article> 
        <picture class="collection__cover">
            <img src="MULTIMEDIA<%= item.licence_image %>" alt="Figura coleccionable Funko de Grogu de la serie The Mandalorian">
        </picture>
    </section>
    <% }); %>

      
    <%- include('partials/slider')%>
    
  </main>

<%- include('partials/footer')%>

  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
  <script src="./js/glide.js"></script>

</body>
</html>