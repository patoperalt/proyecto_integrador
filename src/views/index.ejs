<%- include('partials/header')%>
 
<section class="hero"><!-- inicio hero-->

    <article class="hero__content container">

        <h3 class="hero__title">Nuevos Ingresos</h3>
        <p class="hero__text">Descubrí el próximo Funko Pop de tu colección</p>
        <a class="hero__link" href="/shop">SHOP</a>

    </article>

</section><!-- fin hero-->

  <main class="container">
   
    <% data.forEach( item => { %>
    <section class="collection container">
       <article class="collection__content">
            <h3 class="collection__title"><%= item.licence_name %></h3>
            <p class="collection__text"><%= item.licence_description %></p>
            <a class="collection__link" href="/shop">VER COLECCIÓN</a>
        </article> 
        <picture class="collection__cover">
            <img src="MULTIMEDIA<%= item.licence_image %>" alt="Figura coleccionable Funko de Grogu de la serie The Mandalorian">
        </picture>
    </section>
    <% }); %>

      
 
     <!-- SLIDER ULTIMOS LANZAMIENTOS -->
     <section class="slider container glide">
        <h2 class="slider__title">Últimos lazamientos</h2>
        <div class="glide__track" data-glide-el="track">
        <ul class="slider__items glide__slides">
            <% data.forEach( data => { %>
            <li class="slider__item glide__slide">
                <article class="card-item">
                    <a class="card-item__link" href="">
                        <picture class="card-item__cover">
                            <span class="card-item__tag">NUEVO</span>
                            <img class="card-item__img--front" src="/MULTIMEDIA/<%= data.image_front %>" alt="Figura coleccionable Funko de Stormtrooper">
                            <img class="card-item__img--back" src="/MULTIMEDIA/<%= data.image_back %>" alt="Figura coleccionable Funko de Stormtrooper en caja">
                        </picture>
                        <div class="card-item__content">
                            <p class="card-item__licence"><%= data.licence_name %></p>
                            <h4  class="card-item__name"><%= data.product_name %></h4>
                            <p class="card-item__price">$ <%= data.price %>.-</p>
                            <p class="card-item__promo"><%= data.dues %> CUOTAS SIN INTERES</p>
                        </div>
                    </a>
                </article>
            </li>
            <% }); %>
           
        </ul>
        
    </div>
    <div data-glide-el="controls" class="glide__track" data-glide-el="track">
        <button class="glide__arrow glide__arrow--left coloricon" data-glide-dir="<"><iconify-icon icon="tabler:chevron-left"></iconify-icon></button>
        <button class="glide__arrow glide__arrow--right coloricon" data-glide-dir=">"><iconify-icon icon="tabler:chevron-right"></iconify-icon></button>
      </div>
     </section>
  </main>

<%- include('partials/footer')%>

  <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.7/dist/iconify-icon.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@glidejs/glide"></script>
  <script src="./js/glide.js"></script>

</body>
</html>